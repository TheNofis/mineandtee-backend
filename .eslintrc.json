{
  "env": {
    "es6": true,
    "node": true
  },
  "plugins": ["next"],
  "extends": ["next", "next/core-web-vitals", "eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "no-console": "warn"
  }
}
